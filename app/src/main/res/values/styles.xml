<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LeanbackLauncherAnim">
        <item name="android:taskOpenEnterAnimation">@anim/home_fade_in_top</item>
        <item name="android:taskOpenExitAnimation">@anim/home_fade_in_bottom</item>
        <item name="android:taskCloseEnterAnimation">@anim/home_fade_out_bottom</item>
        <item name="android:taskCloseExitAnimation">@anim/home_fade_out_top</item>
        <item name="android:taskToFrontEnterAnimation">@anim/home_fade_in_top</item>
        <item name="android:taskToFrontExitAnimation">@anim/home_fade_in_bottom</item>
        <item name="android:taskToBackEnterAnimation">@anim/home_fade_out_bottom</item>
        <item name="android:taskToBackExitAnimation">@anim/home_fade_out_top</item>
    </style>

    <style name="LeanbackLauncherTheme" parent="@android:style/Theme.Material.NoActionBar.Overscan">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/LeanbackLauncherAnim</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:fontFamily">@string/font</item>
    </style>

    <style name="Theme.Settings.Legacy" parent="@style/Theme.Leanback.GuidedStep">
        <item name="android:listChoiceIndicatorSingle">@drawable/legacy_preferences_checkmark</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/legacy_preferences_checkmark</item>
        <item name="guidedStepKeyline">50.0</item>
        <item name="guidedStepBackground">@color/settings_dialog_bg_protection</item>
        <item name="guidanceContainerStyle">@style/Widget.Leanback.GuidanceContainerStyle.Legacy</item>
        <item name="guidanceTitleStyle">@style/Widget.Leanback.GuidanceTitleStyle.Legacy</item>
        <item name="guidanceDescriptionStyle">@style/Widget.Leanback.GuidanceDescriptionStyle.Legacy</item>
        <item name="guidanceBreadcrumbStyle">@style/Widget.Leanback.GuidanceBreadcrumbStyle.Legacy</item>
        <item name="guidanceIconStyle">@style/Widget.Leanback.GuidanceIconStyle.Legacy</item>
        <item name="guidedActionItemIconStyle">@style/Widget.Leanback.GuidedActionItemIconStyle.Legacy</item>
    </style>

    <style name="UpdateProgressBar" parent="@android:style/Widget.Material.ProgressBar.Horizontal">
        <item name="android:maxHeight">@dimen/install_progress_bar_height</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">@dimen/install_progress_bar_height</item>
    </style>

    <style name="Widget.Leanback.GuidedActionItemIconStyle.Legacy" parent="@style/Widget.Leanback.GuidedActionItemIconStyle">
        <item name="android:layout_width">@dimen/preference_item_banner_width</item>
        <item name="android:layout_height">@dimen/preference_item_banner_height</item>
        <item name="android:layout_marginEnd">@dimen/lb_preference_item_icon_margin_end</item>
    </style>

    <style name="Widget.Leanback.GuidanceBreadcrumbStyle.Legacy" parent="@style/Widget.Leanback.GuidanceBreadcrumbStyle">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_toStartOf">@+id/guidance_icon</item>
        <item name="android:layout_toEndOf">@null</item>
    </style>

    <style name="Widget.Leanback.GuidanceContainerStyle.Legacy" parent="@style/Widget.Leanback.GuidanceContainerStyle">
        <item name="android:paddingStart">32.0dip</item>
        <item name="android:paddingEnd">0.0dip</item>
    </style>

    <style name="Widget.Leanback.GuidanceDescriptionStyle.Legacy" parent="@style/Widget.Leanback.GuidanceDescriptionStyle">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_toStartOf">@+id/guidance_icon</item>
        <item name="android:layout_toEndOf">@null</item>
    </style>

    <style name="Widget.Leanback.GuidanceIconStyle.Legacy" parent="@style/Widget.Leanback.GuidanceIconStyle">
        <item name="android:background">@color/settings_icon_background</item>
        <item name="android:layout_width">140.0dip</item>
        <item name="android:layout_height">140.0dip</item>
        <item name="android:layout_marginStart">@dimen/lb_preference_item_icon_margin_end</item>
        <item name="android:layout_marginEnd">@dimen/lb_preference_item_icon_margin_end</item>
        <item name="android:layout_alignParentStart">false</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="Widget.Leanback.GuidanceTitleStyle.Legacy" parent="@style/Widget.Leanback.GuidanceTitleStyle">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_toStartOf">@+id/guidance_icon</item>
        <item name="android:layout_toEndOf">@null</item>
    </style>

</resources>